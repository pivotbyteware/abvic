{% extends 'layout.twig' %}

{% block pageContent %}
<div class='container-fluid std-padding span12 offset0  bg-white'>
    
    <br/>
    <br/>
    <div class=''>
        <a href='/customer-loans/payment-authorizations' class='btn btn-primary'><i class='icon-arrow-left'></i> Back</a> &nbsp; &nbsp;
        <a href='/customer-loans/payment-authorizations/{{authorizationRequest.id}}/decline-authorization' 
            class='btn btn-danger'><i class='icon-cross'></i> Decline</a> &nbsp; &nbsp;
        <a href='/customer-loans/payment-authorizations/{{authorizationRequest.id}}/confirm-authorization' 
            class='btn btn-success'><i class='icon-checkmark'></i> Authorize</a>
        
    </div>
    <br />

    {% include 'includes/alerts.twig' %}

    <h2 class="block-inline">
        Customer
    </h2>
    <br/>
    <br/>
    <table class='table table-striped table-bordered table-condensed bg-white'>
        <thead>
            <tr>
                <th>Name</th>
                <th>ID Number</th>
                <th>ID Type</th>
                <th>Company Name</th>
                <th>Email</th>
                <th>Mobile/Phone</th>
                <th>Physical Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{customer.first_name}} {{customer.middle_name}} {{customer.last_name}}</td>
                <td>{{customer.id_number}}</td>
                <td>{{customer.id_type}}</td>
                <td>{{customer.company_name}}</td>
                <td>{{customer.email1}}</td>
                <td>{{customer.mobile1}}</td>
                <td>{{customer.address_line1}}</td>
            </tr>
        </tbody>

    </table>

    <h2 class="block-inline">
        Loan Details
    </h2>
    <br/>
    <br/>
    <table class='table table-striped table-bordered table-condensed bg-white'>
        <thead>
            <tr>
                <th>Loan Number</th>
                <th>Loan Type</th>
                <th>Date Opened</th>
                <th>Opened By</th>
                <th>Bank Account Number</th>
                <th>Bank Account Sort Code</th>
                <th>Loan Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{customerLoan.loan_reference_number}}</td>
                <td>{{customerLoan.loan_type}}</td>
                <td>{{customerLoan.opening_date}}</td>
                <td>{{customerLoan.creator.first_name}} {{customerLoan.creator.last_name}}</td>
                <td>{{customerLoan.customer_bank_account_number}}</td>
                <td>{{customerLoan.customer_bank_account_sort_code}}</td>
                <td>{{customerLoan.loan_status}}</td>
            </tr>
        </tbody>

    </table>

    <h2 class="block-inline">
        Outstanding Payment
    </h2>
    <br/>
    <br/>
    <table class='table table-striped table-bordered table-condensed bg-white'>
        <thead>
            <tr>
                <th>Investment Amount</th>
                <th>Interest Rate</th>
                <th>Interest Amount</th>
                <th>Total Amount</th>
                <th>Duration</th>
                <th>Repayment Date</th>
            </tr>
        </thead>
        <tbody>
            <tr class='warning'>
                <td>{{loanInvestment.investment_amount}}</td>
                <td>{{loanInvestment.interest_rate}}%</td>
                <td>{{loanInvestment.interest_amount}}</td>
                <td>{{loanInvestment.total_amount}}</td>
                <td>{{loanInvestment.investment_duration}} month(s)</td>
                <td>{{loanInvestment.repayment_date}}</td>
            </tr>
        </tbody>

    </table>


    <h2 class="block-inline">
        Payment Details
    </h2>
    <br/>
    <br/>

    <table class='table table-striped table-bordered table-condensed bg-white'>
        <thead>
            <tr>
                <th>Payment Date</th>
                <th>Payment Amount</th>
                <th>Payment Mode</th>
                <th>Creator</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{payment.payment_initiation_date}}</td>
                <td>{{payment.payment_amount}}</td>
                <td>{{payment.payment_mode}}</td>
                <td>{{payment.creator.first_name}} {{payment.creator.last_name}}</td>
                <td></td>
            </tr>
        </tbody>

    </table>

    <h2 class="block-inline">
        Balance After Payment
    </h2>
    <br/>
    <br/>
    <table class='table table-striped table-bordered table-condensed bg-white'>
        <thead>
            <tr>
                <th>Balance</th>
                <th>Interest Rate</th>
                <th>Interest Amount</th>
                <th>Total Amount</th>
                <th>Duration</th>
                <th>Interest Maturity Date</th>
                <th>Repayment Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{balance.amount}}</td>
                <td>{{balance.interest_rate}}%</td>
                <td>{{balance.interest_amount}}</td>
                <td style='background: #F09609; color: #fff; font-weight: bold;'>{{balance.total_amount}}</td>
                <td>{{balance.duration}} month(s)</td>
                <td>{{balance.interest_maturity_date}}</td>
                <td>{{balance.repayment_date}}</td>
            </tr>
        </tbody>

    </table>
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type='text/javascript'>
        

        
    </script>
{% endblock %}
