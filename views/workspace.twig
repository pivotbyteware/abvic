{% extends 'layout.twig' %}

{% block css %}
  {{ parent() }}
  <style type="text/css">
        .workspace-menus a{
            color: inherit;
            text-decoration: none;
        }
        .menu-item{
            border: 2px solid #898989;
            text-align: center;
            vertical-align: top;
            padding: 10px 10px 15px 10px;
            position: relative;
            zoom: 1;
            margin: auto;
            margin-bottom: 20px;
            min-height: 160px;
            background: #fff;
        }

        .menu-item .menu-img{
            font-size: 80px;
            display: block;
            font-weight: 700;
        }

        .menu-item .menu-name{
            font-size: 10px;
            font-weight: bold;
            color: #3c424f;
            margin: 15px 0 0;
            line-height: 22px;
            padding: 5px;
        }

        .menu-item:hover .menu-name{
            background: #3C424F;
            color: #fff;
        }
    </style>
{% endblock %}

{% block pageContent %}

<div class='container-fluid'>
  <div class='row-fluid'>
    <h2>
        My Workspace<br />
        <small><i class='icon-home'></i>&nbsp;{{authUser.screen_name}}</small>
    </h2>
    <br />
    <br />
  </div>

  <div class='row-fluid'>
    <div class="workspace-menus">

        {% if authUser.user_role == 'BRANCH_TELLER' %}
      <div class="span2">
          <a href="/customer-loans/open-new-loan">
              <div class="menu-item">
                  <div class="menu-img">
                      <i class=" icon-clipboard"></i>
                  </div>
                  <div class="menu-name">
                      Open New Loan
                  </div>
              </div>
          </a>
      </div>
      
      <div class="span2">
          <a href="/customer-loans/new-payment">
              <div class="menu-item">
                  <div class="menu-img">
                      <i class="icon-coin"></i>
                  </div>
                  <div class="menu-name">
                      Create Loan Payment
                  </div>
              </div>
          </a>
      </div>
      {% endif %}

      {% if authUser.user_role == 'BRANCH_SUPERVISOR' %}
      <div class="span2">
          <a href="/customer-loans/loan-authorizations">
              <div class="menu-item">
                  <div class="menu-img">
                      <i class="icon-drawer-4"></i>
                  </div>
                  <div class="menu-name">
                      Loan Authorizations
                  </div>
              </div>
          </a>
      </div>
      
      <div class="span2">
          <a href="/customer-loans/payment-authorizations">
              <div class="menu-item">
                  <div class="menu-img">
                      <i class="icon-coin"></i>
                  </div>
                  <div class="menu-name">
                      Payment Authorizations
                  </div>
              </div>
          </a>
      </div>
      {% endif %}

        {% if authUser.user_role == 'SYSTEM_ADMIN' %}
      <div class="span2">
          <a href="/branches/new">
              <div class="menu-item">
                  <div class="menu-img">
                      <i class="icon-office"></i>
                  </div>
                  <div class="menu-name">
                      Create New Branch
                  </div>
              </div>
          </a>
      </div>

      <div class="span2">
          <a href="/users/new">
              <div class="menu-item">
                  <div class="menu-img">
                      <i class="icon-user-add"></i>
                  </div>
                  <div class="menu-name">
                      Create New User
                  </div>
              </div>
          </a>
      </div>
      {% endif %}

  </div>

</div>
{% endblock %}


{% block js %}
    {{ parent() }}
    <script type='text/javascript' src='/plugins/chartjs/chart.bundle.min.js'></script>
    <script type='text/javascript'>
        
        
    </script>
{% endblock %}
