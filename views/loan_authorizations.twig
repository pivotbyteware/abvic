{% extends 'layout.twig' %}

{% block pageContent %}

<div class="bg-white container-fluid form-container" style='border: 2px solid #bbb; padding: 10px;'>
    {% include 'includes/alerts.twig' %}
        
    <h4>Loan Authorizations</h4>
    <hr />
    <table class='table table-striped table-bordered bg-white' style='font-size: 12px;'>
        <thead>
            <tr>
                <th>Date Opened</th>
                <th>Loan Number</th>
                <th>Customer Name</th>
                <th>Loan Amount</th>
                <th>Interest Rate</th>
                <th>Interest Amount</th>
                <th>Total Amount</th>
                <th>Opened By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for loanAuthorizationRequest in loanAuthorizationRequests %}
                <tr>
                    <td>{{loanAuthorizationRequest.customerLoan.opening_date}}</td>
                    <td>{{loanAuthorizationRequest.customerLoan.loan_reference_number}}</td>
                    <td>{{loanAuthorizationRequest.customer.first_name}} {{loanAuthorizationRequest.customer.last_name}}</td>
                    <td>{{loanAuthorizationRequest.activeInvestment.investment_amount}}</td>
                    <td>{{loanAuthorizationRequest.activeInvestment.interest_rate}}%</td>
                    <td>{{loanAuthorizationRequest.activeInvestment.interest_amount}}</td>
                    <td>{{loanAuthorizationRequest.activeInvestment.total_amount}}</td>
                    <td>{{loanAuthorizationRequest.loanCreator.first_name}} {{loanAuthorizationRequest.customer.last_name}}</td>
                    <td class="align-center">
                        <div class="dropdown">
                            <span class="hover-cursor-pointer" class="dropdown-toggle" data-toggle="dropdown">Action <b class="caret"></b></span>
                            <ul class="dropdown-menu align-left" role="menu" aria-labelledby="dLabel">
                                <li><a tabindex="-1" href='/customer-loans/loan-authorizations/{{loanAuthorizationRequest.authWorkflow.id}}/details'>Details</a></li>
                                <li><a tabindex="-1" href="/customer-loans/loan-authorizations/{{loanAuthorizationRequest.authWorkflow.id}}/confirm-authorization">Approve</a></li>
                                <li><a tabindex="-1" href="/customer-loans/loan-authorizations/{{loanAuthorizationRequest.authWorkflow.id}}/decline-authorization">Decline</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type='text/javascript'>
        
    </script>
{% endblock %}
