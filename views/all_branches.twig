{% extends 'layout.twig' %}

{% block css %}
  {{ parent() }}
  <style type="text/css">
        
    </style>
{% endblock %}

{% block pageContent %}

<div class='container-fluid'>
    <div class='row-fluid'>
        <h3><i class='icon-office'></i> &nbsp;Branches</h3>
    </div>
    <br />

    {% include 'includes/alerts.twig' %}
    <br />

    <div class='row-fluid'>
        <a href='/branches/new' class='btn btn-primary btn-small pull-right'><i class='icon-plus'></i> New Branch</a> &nbsp; &nbsp;
    </div>
    <div class='row-fluid'>
        <table class='table table-striped table-bordered bg-white'>
            <thead>
                <tr>
                    <th>Branch Code</th>
                    <th>Branch Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for branch in branches %}
                <tr>
                    <td>{{ branch.branch_code}}</td>
                    <td>{{ branch.branch_name}}</td>
                    <td class="align-center">
                        <div class="dropdown">
                            <span class="hover-cursor-pointer" class="dropdown-toggle" data-toggle="dropdown">Action <b class="caret"></b></span>
                            <ul class="dropdown-menu align-left" role="menu" aria-labelledby="dLabel">
                                <li><a tabindex="-1" href='/branches/{{branch.id}}/edit'>Edit</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

</div>
{% endblock %}

